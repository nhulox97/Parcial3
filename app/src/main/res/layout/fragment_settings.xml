<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-31dp"
            tools:layout_editor_absoluteX="170dp">

        <ImageView android:layout_width="120dp" android:layout_height="120dp"
                   app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                   android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                   android:background="@drawable/user"
                   android:layout_marginEnd="8dp" android:layout_marginRight="8dp" tools:ignore="MissingConstraints"
                   app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="28dp"
                   app:layout_constraintBottom_toTopOf="@+id/textView5"/>

        <TextView android:layout_width="354dp"
                  android:layout_height="55dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                  android:text="Ajustes"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:textSize="35dp"
                  app:layout_constraintHorizontal_bias="0.632" app:layout_constraintVertical_bias="0.332"
                  android:id="@+id/textView5"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                  android:text="Color de Fondo"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:textSize="20dp"
                  app:layout_constraintHorizontal_bias="0.116" app:layout_constraintVertical_bias="0.472"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="8dp"
                  android:text="Color de Boton"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:textSize="20dp"
                  app:layout_constraintHorizontal_bias="0.103" app:layout_constraintVertical_bias="0.701"
                  android:id="@+id/textView"/>


        <Spinner
                android:id="@+id/spnBackground"
                android:layout_width="354dp"
                android:layout_height="55dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:text="Ajustes"
                android:background="@drawable/redon"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="35dp"
                app:layout_constraintHorizontal_bias="0.571" app:layout_constraintVertical_bias="0.58"/>


        <Spinner
                android:id="@+id/spnButton"
                android:layout_width="354dp"
                android:layout_height="55dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                android:text="Ajustes"
                android:background="@drawable/redon"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="35dp"

                app:layout_constraintHorizontal_bias="0.571" app:layout_constraintVertical_bias="0.797"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:background="@drawable/marcos"
                android:textColor="#fff"
                android:text="Aceptar" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spnButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>